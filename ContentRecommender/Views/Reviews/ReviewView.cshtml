@model ReviewViewModel
@{
    ViewData["Title"] = "Review";
}
@section Scripts
{
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>

    <script src="https://ucarecdn.com/libs/widget/3.x/uploadcare.min.js"></script>

    <script src="https://raw.githubusercontent.com/dragonofmercy/Tokenize2/master/dist/tokenize2.min.js"></script>
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow rounded">
                <div class="card-header bg-dark text-center text-white">
                    <h3>@Model.Title</h3>
                </div>
                <div class="card-body justify-content-center">
                    @Model.Text
                </div>
                <div class="card-footer text-center">
                    <small class="text-muted">Likes: 5</small>  <small class="text-muted">User rating: 5</small>  <strong>Author rating: 5</strong>
                </div>
                <div class="card-footer text-center">
                <small class="text-muted">Likes: 5</small>  <small class="text-muted">User rating: 5</small>  <strong>Author rating: 5</strong>
                </div>
            </div>
        </div>
    </div>
</div>
